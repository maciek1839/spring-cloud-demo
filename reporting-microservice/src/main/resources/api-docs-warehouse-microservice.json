{
  "openapi" : "3.0.1",
  "info" : {
    "title" : "Warehouse Microservice API",
    "description" : "Spring Cloud Application - Warehouse Microservice. This microservice is a proxy forwarding requests to the factory microservice.",
    "license" : {
      "name" : "MIT",
      "url" : "https://opensource.org/license/mit/"
    },
    "version" : "0.0.1"
  },
  "externalDocs" : {
    "description" : "ShowMeYourCodeYouTube - GitLab",
    "url" : "https://gitlab.com/ShowMeYourCodeYouTube"
  },
  "servers" : [ {
    "url" : "http://localhost:52993/warehouse",
    "description" : "Generated server url"
  } ],
  "paths" : {
    "/api/v1/orders" : {
      "post" : {
        "tags" : [ "Orders" ],
        "summary" : "Make an order",
        "operationId" : "create",
        "parameters" : [ {
          "name" : "X-Client-Id",
          "in" : "header",
          "description" : "A client's ID (a service name)",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "requestBody" : {
          "content" : {
            "application/json" : {
              "schema" : {
                "$ref" : "#/components/schemas/NewOrderRequest"
              }
            }
          },
          "required" : true
        },
        "responses" : {
          "400" : {
            "description" : "A request is invalid. Some required parameters are missing.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object"
                }
              }
            }
          },
          "201" : {
            "description" : "An order successfully created."
          },
          "500" : {
            "description" : "Internal Server Error. Please try again later."
          }
        }
      }
    },
    "/api/v1/orders/report" : {
      "get" : {
        "tags" : [ "Orders" ],
        "summary" : "Get an orders report",
        "operationId" : "getReport",
        "parameters" : [ {
          "name" : "X-Client-Id",
          "in" : "header",
          "description" : "A client's ID (a service name)",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "X-Client-Ip",
          "in" : "header",
          "description" : "A client's IP",
          "required" : false,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "401" : {
            "description" : "Unauthorized access.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/OrdersReportResponse"
                }
              }
            }
          },
          "200" : {
            "description" : "A report was successfully created.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/OrdersReportResponse"
                }
              }
            }
          },
          "500" : {
            "description" : "Internal Server Error. Please try again later.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/OrdersReportResponse"
                }
              }
            }
          }
        },
        "security" : [ {
          "basicAuth" : [ ]
        } ]
      }
    },
    "/api/v1/items" : {
      "get" : {
        "tags" : [ "Items" ],
        "summary" : "Get all available items",
        "operationId" : "getAll",
        "parameters" : [ {
          "name" : "X-Client-Id",
          "in" : "header",
          "description" : "A client's ID (a service name)",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "400" : {
            "description" : "A request is invalid. Some required parameters are missing.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "object"
                }
              }
            }
          },
          "200" : {
            "description" : "Successfully retrieved items.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/ItemResponse"
                  }
                }
              }
            }
          },
          "500" : {
            "description" : "Internal Server Error. Please try again later.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "type" : "array",
                  "items" : {
                    "$ref" : "#/components/schemas/ItemResponse"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/items/{id}" : {
      "get" : {
        "tags" : [ "Items" ],
        "summary" : "Get an item by ID",
        "operationId" : "getById",
        "parameters" : [ {
          "name" : "X-Client-Id",
          "in" : "header",
          "description" : "A client's ID (a service name)",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "id",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "404" : {
            "description" : "An item with associated ID is not found.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ItemResponse"
                }
              }
            }
          },
          "200" : {
            "description" : "Successfully retrieved an item.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ItemResponse"
                }
              }
            }
          },
          "500" : {
            "description" : "Internal Server Error. Please try again later.",
            "content" : {
              "application/json" : {
                "schema" : {
                  "$ref" : "#/components/schemas/ItemResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/v1/orders/{id}" : {
      "delete" : {
        "tags" : [ "Orders" ],
        "summary" : "Cancel an order",
        "operationId" : "cancel",
        "parameters" : [ {
          "name" : "X-Client-Id",
          "in" : "header",
          "description" : "A client's ID (a service name)",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        }, {
          "name" : "id",
          "in" : "path",
          "required" : true,
          "schema" : {
            "type" : "string"
          }
        } ],
        "responses" : {
          "204" : {
            "description" : "Cancellation succeed."
          },
          "410" : {
            "description" : "An order cannot be cancelled. It's already processed."
          },
          "404" : {
            "description" : "An order with associated ID is not found."
          },
          "500" : {
            "description" : "Internal Server Error. Please try again later."
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "NewItemRequest" : {
        "required" : [ "name" ],
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          }
        }
      },
      "NewOrderRequest" : {
        "required" : [ "customerName", "item" ],
        "type" : "object",
        "properties" : {
          "item" : {
            "$ref" : "#/components/schemas/NewItemRequest"
          },
          "customerName" : {
            "type" : "string"
          },
          "comment" : {
            "type" : "string"
          }
        }
      },
      "OrdersReportResponse" : {
        "required" : [ "name", "requestedBy" ],
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          },
          "requestedBy" : {
            "type" : "string"
          }
        }
      },
      "ItemResponse" : {
        "required" : [ "id", "name" ],
        "type" : "object",
        "properties" : {
          "id" : {
            "type" : "string",
            "format" : "uuid"
          },
          "name" : {
            "type" : "string"
          }
        }
      }
    },
    "securitySchemes" : {
      "basicAuth" : {
        "type" : "http",
        "scheme" : "basic"
      }
    }
  }
}